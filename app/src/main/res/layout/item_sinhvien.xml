<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10sp"
    android:layout_margin="10sp"
    android:background="@drawable/custom_edt_admin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ma sinh viên:"
            android:textSize="16sp"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tv_masinhvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1701169958919"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Họ tên : "
            android:textSize="16sp"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tv_hotensinhvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ông văn sinh"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Địa chỉ: "
            android:textSize="16sp"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tv_diachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hà Nội"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ngày sinh:"
            android:textSize="16sp"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tv_ngaysinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21/8/2003"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:text="Giới tính:"
            android:textSize="16sp" />

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tv_gioitinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Email:"
            android:textSize="16sp"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sinhteogp@gmail.com"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Điểm học tập:"
            android:textSize="16sp"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tv_diemhoctap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>