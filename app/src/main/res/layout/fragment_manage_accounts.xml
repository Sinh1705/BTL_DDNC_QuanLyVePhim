<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:padding="10sp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/avartar_manager"
        android:id="@+id/img_manager"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:ignore="MissingClass" />
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        android:text="sinhteogp@gmail.com"
        android:layout_below="@+id/img_manager"
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view1"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@+id/tv_email" />
    <LinearLayout
        android:id="@+id/liner_doanhthu"
        android:layout_marginTop="30sp"
        android:orientation="horizontal"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_report"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:text="Báo cáo doanh thu"
            android:layout_gravity="center"
            android:id="@+id/tv_doanhthu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_below="@id/liner_doanhthu"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C7C6CA"
        tools:ignore="DuplicateIds" />
    <LinearLayout
        android:id="@+id/liner_matkhau"
        android:layout_marginTop="15sp"
        android:orientation="horizontal"
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_password"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:text="Đổi mật khẩu"
            android:layout_gravity="center"
            android:id="@+id/tv_doimatkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@id/liner_matkhau"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C7C6CA"
        tools:ignore="DuplicateIds" />
    <LinearLayout
        android:layout_marginTop="15sp"
        android:orientation="horizontal"
        android:layout_below="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_logout"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:text="Logout"
            android:layout_gravity="center"
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>